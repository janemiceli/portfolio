---

<Layout title="Skills | Akash Verma">
	<div class="flex flex-col gap-10">
		<header class="border-b border-slate-200 dark:border-slate-800 pb-8 transition-colors flex flex-col md:flex-row md:items-end justify-between gap-4">
			<div>
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-slate-100 mb-2 transition-colors tracking-tight">
          DevOps <span class="text-emerald-600 dark:text-emerald-400">Toolchain</span>
        </h1>
      </div>
			<p class="text-slate-600 dark:text-slate-400 text-base md:text-lg leading-relaxed md:text-right max-w-none md:max-w-2xl">
        My technical capabilities visualized as a continuous delivery pipeline. From source code to production observability.
      </p>
		</header>

    {/* Pipeline Container */}
    <div class="relative flex flex-col gap-8 md:gap-12">
      
      {/* Connecting Line (Desktop) */}
      <div class="hidden md:block absolute left-[2.25rem] top-8 bottom-8 w-0.5 bg-gradient-to-b from-slate-200 via-emerald-500/50 to-slate-200 dark:from-slate-800 dark:via-emerald-500/50 dark:to-slate-800 z-0"></div>

      {pipeline.map((stage, index) => (
        <div class="relative pl-0 md:pl-24">
           
           {/* Connector Dot/Icon (Desktop) */}
           <div class={`hidden md:flex absolute left-0 top-6 w-20 h-20 rounded-full border-4 border-slate-50 dark:border-slate-950 bg-white dark:bg-slate-900 shadow-xl z-10 items-center justify-center group hover:scale-110 transition-transform duration-300 ring-4 ring-slate-100 dark:ring-slate-800`}>
              <div class={`w-12 h-12 rounded-full flex items-center justify-center ${stage.bg} ${stage.color}`}>
                <stage.icon className="w-6 h-6" />
              </div>
           </div>

           {/* Content Card */}
           <div class="relative bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 p-6 shadow-sm hover:shadow-xl hover:shadow-emerald-500/5 transition-all duration-300 group hover:-translate-y-1 overflow-hidden">
              
              {/* Background Gradient */}
              <div class={`absolute inset-0 opacity-0 group-hover:opacity-5 transition-opacity duration-500 bg-gradient-to-r ${stage.color.replace('text-', 'from-')} to-transparent`}></div>

              {/* Mobile Header */}
              <div class="flex items-center gap-4 mb-6 md:hidden">
                 <div class={`p-3 rounded-xl ${stage.bg} ${stage.color}`}>
                    <stage.icon className="w-6 h-6" />
                 </div>
                 <h2 class="text-xl font-bold text-slate-800 dark:text-slate-100">{stage.stage}</h2>
              </div>

              {/* Desktop Header (Inline) */}
              <div class="hidden md:flex items-center justify-between mb-6 border-b border-slate-100 dark:border-slate-800 pb-4">
                 <div>
                   <h2 class="text-2xl font-bold text-slate-800 dark:text-slate-100 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors">{stage.stage}</h2>
                   <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">{stage.description}</p>
                 </div>
              </div>

              {/* Tools Grid */}
              <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-6 relative z-10">
                {stage.tools.map((tool) => (
                  <div class="flex flex-col items-center justify-center gap-3 p-4 rounded-xl bg-slate-50 dark:bg-slate-800/50 hover:bg-white dark:hover:bg-slate-800 border border-transparent hover:border-slate-200 dark:hover:border-slate-700 hover:shadow-lg transition-all duration-300 group/tool cursor-default transform hover:-translate-y-1">
                    {tool.icon.startsWith('http') ? (
                       <img src={tool.icon} alt={tool.name} class="w-10 h-10 md:w-12 md:h-12 transition-transform duration-300 group-hover/tool:scale-110 drop-shadow-sm object-contain" />
                    ) : (
                       <i class={`${tool.icon} text-4xl md:text-5xl transition-transform duration-300 group-hover/tool:scale-110 drop-shadow-sm`}></i>
                    )}
                    <span class="text-[10px] md:text-xs font-medium text-slate-500 dark:text-slate-400 group-hover/tool:text-slate-900 dark:group-hover/tool:text-white text-center transition-colors">
                      {tool.name}
                    </span>
                  </div>
                ))}
              </div>
           </div>

        </div>
      ))}
    </div>
	</div>
</Layout>

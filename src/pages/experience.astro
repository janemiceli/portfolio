---
import Layout from "../layouts/Layout.astro";
import { ExternalLink } from "lucide-react";

const education = [
  {
    degree: "Berkeley CTO Program",
    institution: "UC Berkeley",
    location: "Berkeley, CA (program)",
    duration: "2025 – 2026",
    link: "https://executive.berkeley.edu/",
    logo: "https://upload.wikimedia.org/wikipedia/commons/8/8c/UC_Berkeley_logo.svg",
    coursework: ["CTO / executive-level technical leadership curriculum"],
    skills: ["Executive strategy", "Technology leadership", "Org design", "Business alignment"],
  },
  {
    degree: "Master of Science",
    institution: "University of Wisconsin–Milwaukee",
    location: "Milwaukee, WI, USA",
    duration: "2004 – 2008",
    link: "http://www.worldcat.org/oclc/288956579",
    logo: "https://upload.wikimedia.org/wikipedia/commons/3/3f/University_of_Wisconsin%E2%80%93Milwaukee_logo.svg",
    coursework: ["Master's thesis (WorldCat record)"],
    skills: ["Systems thinking", "Engineering leadership", "Software engineering"],
  },
  {
    degree: "Bachelor of Science",
    institution: "University of Wisconsin–Milwaukee",
    location: "Milwaukee, WI, USA",
    duration: "2000 – 2004",
    link: "http://www.uwm.edu",
    logo: "https://upload.wikimedia.org/wikipedia/commons/3/3f/University_of_Wisconsin%E2%80%93Milwaukee_logo.svg",
    coursework: ["Computer Science foundations"],
    skills: ["Software engineering", "Problem solving"],
  },
];
---

<Layout title="Education — Jane Miceli">
  <h1 class="text-3xl font-bold">Academic Kernel</h1>
  <p class="mt-2 text-slate-300">
    Compiled theoretical foundations powering my practical engineering runtime.
  </p>

  <div class="mt-8 space-y-6">
    {education.map((edu) => (
      <section class="rounded-2xl border border-white/10 bg-black/20 p-6">
        <div class="flex items-start gap-4">

          {/* LOGO — strictly constrained */}
          <div class="h-16 w-16 shrink-0 rounded-xl border border-white/10 bg-white/5 p-2 flex items-center justify-center">
            <img
              src={edu.logo}
              alt={`${edu.institution} logo`}
              class="max-h-12 max-w-12 object-contain"
              loading="lazy"
              referrerpolicy="no-referrer"
            />
          </div>

          <div class="min-w-0">
            <div class="text-xl font-semibold">{edu.degree}</div>
            <div class="mt-1 text-slate-300">{edu.institution}</div>
            <div class="mt-1 text-sm text-slate-400">
              {edu.location} • {edu.duration}
            </div>

            <div class="mt-3">
              <a
                class="inline-flex items-center gap-2 text-emerald-400 hover:text-emerald-300"
                href={edu.link}
                target="_blank"
                rel="noreferrer"
              >
                View reference <ExternalLink size={16} />
              </a>
            </div>
          </div>
        </div>

        {/* Terminal-style block */}
        <div class="mt-6 rounded-xl border border-white/10 bg-black/30 p-4 font-mono text-sm">
          <div class="text-slate-400">zsh — {edu.duration}</div>

          <div class="mt-3">➜ ~ ls ./coursework</div>
          <div class="mt-2 flex flex-wrap gap-2">
            {edu.coursework.map((c) => (
              <span class="rounded-lg bg-white/5 px-2 py-1">
                {c}
              </span>
            ))}
          </div>

          <div class="mt-4 text-slate-400">➜ ~ cat ./skills</div>
          <div class="mt-2 flex flex-wrap gap-2">
            {edu.skills.map((s) => (
              <span class="rounded-lg bg-white/5 px-2 py-1">
                {s}
              </span>
            ))}
          </div>
        </div>
      </section>
    ))}
  </div>
</Layout>
